<table id="datatable-default" class="table display responsive nowrap">
    <thead>
                            
      <tr>
        <th>Date</th>
        <th>MTCN</th>
        <th>Motif</th>
        <th>Montant TTC</th>
        <th>Devise</th>
        <th>Expéditeur</th>
        <th>Bénéficiaire</th>
        <th>Statut</th>
        <th>Actions</th>
      </tr>
                    
      </thead>
      <tbody >
                     
        <% @transferts.each do |transfert| %>
      <tr>
        <td><%= transfert.created_at.strftime("%d/%m/%Y") %></td>
        <td><strong><%= transfert.mtcn %></strong></td>
        <td><%= transfert.reason %></td>
        <td><%= number_to_currency transfert.amount_incl_tax, unit: "", seperator: ",", delimiter: " " %></td>
        <td><%= transfert.currency.iso_code %></td>
        <td><%= "#{transfert.sender_name} #{transfert.sender_first_name}"  %></td>
        <td><%= "#{transfert.beneficiary_name} #{transfert.beneficiary_first_name}" %></td>     
        <td><%= transfert.status %></td>
        <td>
      <div class="action-buttons">
      <%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'),  edit_transfert_path(transfert), title: "Modifier", remote: true %>




<%= link_to raw('<i class="far fa-trash-alt" aria-hidden="true"></i>
'), transfert_delete_path(transfert), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>
      </tr>
    <% end %>

    </tbody>
    <tfoot class="tfooter">
        
      
    </tfoot>
</table>


                       