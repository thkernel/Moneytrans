<% @withdrawals.each do |withdrawal| %>
    <tr>
      <td><%= withdrawal.created_at.strftime("%d/%m/%Y") %></td>
      <td><%= withdrawal.transfert.uid %></td>
      <td><%= IdentityDocumentType.find(withdrawal.beneficiary_identity_document_type_id).name %></td>
      <td><%= withdrawal.beneficiary_identity_document_code %></td>
      <td><%= withdrawal.amount_incl_tax %></td>
      <td><%= withdrawal.status %></td>
      <td>
      <div class="action-buttons">
      <%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'),  edit_withdrawal_path(withdrawal), title: "Modifier", remote: true %>




<%= link_to raw('<i class="far fa-trash-alt" aria-hidden="true"></i>
'), withdrawal_delete_path(withdrawal), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>
    </tr>
  <% end %>