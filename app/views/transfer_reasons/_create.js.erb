$("ul.errors").html("");
<% if @transfer_reason.errors.any? %>
  <% @transfer_reason.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".transfer-reasons").html("<%= escape_javascript(render 'index') %>");
  $("#transfer-reason-modal").modal("hide");
 
<% end %>