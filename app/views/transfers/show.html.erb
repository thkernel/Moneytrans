
<div class="br-pagebody mg-b-30 mg-t-80">
    <div class="br-section-wrapper">

        <div class="actions text-center mg-b-10">

            <%= link_to raw('<i class="far fa-file-pdf tx-20"></i> Télécharger'), download_slip_path(@transfer, format: :pdf), class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", remote: false %>
      
        </div>
    
        <div id="invoice-box" class="invoice-box mt-30 mb-30">
            
            <table cellpadding="0" cellspacing="0">
                

                <tr>
                    <%= render "transfers/partials/pdf/header" %>
                </tr>

                
                <tr>
                    <%= render "transfers/partials/pdf/body" %>
                </tr>

               
                
                
                
                <tr class="signature">
                    <%= render "transfers/partials/pdf/footer" %>
                </tr>
            </table>
        </div>

    </div>

</div>
    <script>
     
        function printInvoice1() {
            var divContents = document.getElementById("invoice-box").innerHTML;
            var a = window.open('', '', 'height=500, width=500');

            
           
            a.document.write('<html>');
            //a.document.write(head);
           
            a.document.write('<body>');
            a.document.write(divContents);
            a.document.write('</body></html>');
            a.document.close();
            a.print();
        }

        function printInvoice2() {
            var printContents = document.getElementById("invoice-box").innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;

            window.print();

            document.body.innerHTML = originalContents;
        }

        function printFunc() {
          var divToPrint = document.getElementById('invoice-box');
          var htmlToPrint = '' +
          '<style type="text/css">' +
          'table th, table td {' +
          'btransfert:1px solid #000;' +
          '}' +
          '</style>';
          htmlToPrint += divToPrint.outerHTML;
          newWin = window.open("");
          newWin.document.write("<h3 align='center'>Print Page</h3>");
          newWin.document.write(htmlToPrint);
          newWin.print();
        newWin.close();
    }

    </script>
   